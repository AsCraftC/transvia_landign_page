---
import imagen from '@/assets/home/overview.jpg';
interface props{
    slogan  : string;
}
const { slogan } = Astro.props
---

<article class="overview">
    <h2 class="overview__slogan">
        {slogan}
    </h2>
    <img 
        class="overview__img" 
        src={imagen.src} 
        alt="Imagen de un calle X de la ciudad"
        loading="lazy"
        decoding="async"
    >
</article>

<style>
.overview{
    position    : relative;
    padding     : 0 clamp(1rem, 8vw - 2.6rem ,3rem);

}
.overview__slogan{
    position    : absolute;
    top         : clamp(1rem, 8vw - 2.6rem ,3rem);
    font-size   : clamp(3rem, 6vw + .3rem, 4.5rem);
    font-weight : 700;
    letter-spacing: -.02em;
}
.overview__img{
    width       : 55vw;
    height      : 62vw;
    margin-left: auto;
}

@media (prefers-color-scheme: dark) {
    .overview__slogan{
        text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
    }
}

@media screen and (min-width: 560px) {
    .overview__slogan{
        top         : 0;
        font-size   : clamp(4.5rem, 7vw - .3rem, 12rem);
    }
    .overview__img{
        width       : 75vw;
        height      : 42vw;
        margin-top  : clamp(4.5rem, 7vw - .3rem, 12rem);
    }
}
</style>
