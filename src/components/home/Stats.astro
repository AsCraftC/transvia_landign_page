---
interface Props {
    stats : {valor : number, etiqueta : string}[];
}

const { stats } = Astro.props
---
<article class="badge-stats">
    <div class="stat stat-0">
        <span class="stat__number"> {new Intl.NumberFormat("es-CL").format(stats[0].valor)} </span>
        <p class="stat__label"> {stats[0].etiqueta} </p>
    </div>
    <div class="stat stat-1">
        <span class="stat__number"> {new Intl.NumberFormat("es-CL").format(stats[1].valor)} </span>
        <p class="stat__label"> {stats[1].etiqueta} </p>
    </div>
    <div class="stat stat-2">
        <span class="stat__number"> {new Intl.NumberFormat("es-CL").format(stats[2].valor)} </span>
        <p class="stat__label"> {stats[2].etiqueta} </p>
    </div>
</article>

<style>
.badge-stats{
    width           : clamp(360px, 100vw, 100vw);
    display         : flex;
    padding         : 10% clamp(.5rem, 6vw - 2.2rem, 2rem);
    justify-content : center;
    background      : var(--background-banner);
}
.stat{
    flex-grow       : 0;
    flex-shrink     : 0;
    position        : relative;
    width           : min-content;
    display         : flex;
    flex-direction  : column;
    justify-content : center;
    align-items     : center;
    text-align      : center;
}
.stat__number{
    font-size       : clamp(5rem, 11vw , 9rem);
    font-weight     : 700;
    line-height     : .8em;
}
.stat__label{
    width           : 100%;
    font-size       : clamp(1.5rem, 3vw, 2rem);
    font-weight     : 900;
    letter-spacing  : -.04em;
}
.stat-0{
    bottom          : clamp(4rem, 8vw + .2rem, 7rem);
    left            : 3vw;
}
.stat-1{
    top             : clamp(4rem, 14vw - 2.4rem, 9rem);
    right           : 1vw;
    text-wrap       : nowrap;
}
.stat-2{
    bottom          : clamp(2rem, 2vw + .7rem, 3rem);
    left            : 2vw;
}

@media screen and (min-width: 641px) {
    .badge-stats{
        padding         : 2.5rem clamp(2rem, 7vw - 3.6rem, 9rem);
        height          : auto;
        justify-content : space-between;
    }
    .stat{
        position        : static;
        flex-direction  : row;
        gap             : .5rem;
        text-align      : left;
    }
    .stat__number{
        font-size       : clamp(5rem, 3vw + 2.6rem, 8rem);
    }
    .stat__label{
        font-size       : clamp(2rem, 1vw + 1.2rem, 3rem);
    }
    .stat-1{
        text-wrap       : wrap;
    }
}
@media screen and (min-width: 1440px){
    .badge-stats{
        padding : 2.5rem calc((100vw + 18rem - 1440px)/2);
    }
}
</style>
