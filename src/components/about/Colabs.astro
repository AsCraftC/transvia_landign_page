<style>
.colaborations{
    margin          : 0 1rem;
    display         : flex;
    flex-direction  : column;
    gap             : 3rem;
    overflow-x      : hidden;
}

.colaborations__show{
    position        : relative;
    display         : flex;
    gap             : 1rem;
    animation       : linear colanH 15s infinite;
}
@keyframes colanH {
    from{left       : 0;}
    to{left         : -36rem;}
}

.colaborations__logo{
