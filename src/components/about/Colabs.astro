import SectionTitle from '../SectionTitle.astro';

interface Props {
    logos   : ImageMetadata[];
}
const { logos } = Astro.props

const logosTop = logos.slice(0, Math.floor(logos.length / 2))
const logosDown = logos.slice(Math.floor(logos.length / 2),logos.length)

