---
import SectionTitle from '@/components/SectionTitle.astro';
import descriptionIMG from "@/assets/about/description.jpg";

interface Props {
    description  : string;
}

const { description } = Astro.props
---

<section class="company-description">
    <img 
        class="company-description__img"
        src={descriptionIMG.src}
        alt="Imagen de un paso de zebra"
        loading="lazy"
        decoding="async"
    >
    <div class="company-description__info">
        <SectionTitle title="Quienes Somos" />
        <p class="company-description__desc"> { description } </p>
    </div>
</section>

<style>
.company-description{
    padding         : 2rem;
    display         : flex;
    flex-direction  : column;
    gap             : 1rem;
    background      : var(--background-banner);
}
.company-description__img{
    aspect-ratio: 21 / 19;
}
.company-description__info{
    display         : flex;
    flex-direction  : column;
    gap             : .5rem;
}
.company-description__desc{
    font-size       : 1.5rem;
    letter-spacing  : -.03em;
}
</style>
