---
import { companyData } from "@/data/contact";

import transviaLogoWhite from "@/assets/transviaLogoClaro.png";
import WhatsappLogo from "@/icons/WhatsappLogo.astro";
import InstagramLogo from "@/icons/InstagramLogo.astro";
import LinkedinLogo from "@/icons/LinkedinLogo.astro";

const whatsapp = companyData.telefono;
---

<footer class="footer">
    <h3 class="footer__title">
        <span class="label"> Contactanos&nbsp; </span>
        <span class="label"> Contactanos&nbsp; </span>       
        <span class="label"> Contactanos&nbsp; </span>       
        <span class="label"> Contactanos&nbsp; </span>       
        <span class="label"> Contactanos&nbsp; </span>       
    </h3>
    <article class="footer__right">
        <img 
            class="logo" 
            src={transviaLogoWhite.src} 
            alt="Logo de Transvia Ingenieríia en color blanco"
            loading="lazy"
            decoding="async"
        >
        <h1 class="company-name">{companyData.nombreCompañia}</h1>
        <p class="company-location">{companyData.direccion}, {companyData.ciudad}</p>
    </article>
    <aside class="footer__left">
        <p class="company-contact"> {companyData.email} </p>
        <p class="company-contact"> {companyData.telefono} </p>
        <ul class="social-network">
            <li class="social-network__link">
                <a aria-label="Enlace hacia chat de WhatsApp" href={whatsapp}>
                    <WhatsappLogo />
                </a>
            </li>
            <li class="social-network__link">
                <a aria-label="Enlace hacia perfil de Instagram" href={companyData.enlaceInstagram} >
                    <InstagramLogo />
                </a>
            </li>
            <li class="social-network__link">
                <a aria-label="Enlace hacia perfil de Linked In" href={companyData.enlaceLinkedin} >
                    <LinkedinLogo />
                </a>
            </li>
        </ul>
    </aside>
    <footer class="footer__botton">
        <span class="botton__item">© Transvia Ingeniería 2024</span>
        <span class="botton__item">Cristóbal Contreras Beltrán</span>
    </footer>
</footer>

<style>
.footer{
    position        : relative;
    bottom          : auto;
    display         : grid;
    grid-template-columns: 50% 50%;
    grid-template-areas: 
        "title title"
        "right left"
        "footer footer";
    background-color: var(--footer-color);
    color           : var(--footer-letter);
    padding         : 1em;
    white-space     : nowrap;
}
.footer__title{
    grid-area       : title;
    position        : relative;
    display         : flex;
    flex-flow       : row nowrap;
    font-family     : "Nunito", sans-serif;
    font-size       : 5em;
    font-weight     : 600;
    overflow-x      : hidden;
}
.label{
    display         : inline-block;
    animation       : hTranslation 5s linear infinite;
}
@keyframes hTranslation {
    from{transform  : translateX(0);}
    to{transform    : translateX(-100%);}
}
.footer__right{
    grid-area       : right;
    margin-bottom   : 3em;
}
.logo{
    width           : 11em;
    height          : 4em;
}
.company-name{
    font-family     : "Nunito", sans-serif;
    font-size       : 3em;
    font-weight     : 600;
    text-wrap       : nowrap;
}
.company-location{
    font-size       : 1.5em;
}

.footer__left{
    grid-area       : left;
}
.company-contact{
    text-align      : end;
    font-size       : 1.5em;
    letter-spacing  : -.03em;
    margin-bottom   : .5em;
}
.social-network{
    display         : flex;
    justify-content : end;
    gap             : 1em;
}
.social-network__link{
    width           : 3em;
    height          : 3em;
}

.footer__botton{
    grid-area       : footer;
    border-top      : 1px solid var(--footer-letter);
    margin          : 0 1em;
    padding-top     : 1em;
    display         : flex;
    flex-direction  : row;
    justify-content : space-between;
}
.botton__item{
    font-size       : 1em;
}

@media screen and (min-width: 641px){
    .footer{
        grid-template-areas: 
            "right left"
            "footer footer";
    }
    .footer__title{
        display     : none;
    }
    .footer__right{
        display         : grid;
        grid-template-areas:
            "logo name"
            "location location";
        justify-content : end;
        margin-top      : 3em;
        white-space     : nowrap;
    }
    .logo{
        grid-area       : logo;
        width           : 12em;
        height          : 4.5em;
    }
    .company-name{
        grid-area       : name;
        align-self      : end;
    }
    .company-location{
        grid-area       : location;
        justify-self    : end;
    }
    
    
    .footer__left{
        margin          : auto 0;
        padding         : 0 3em;
    }
    .social-network{
        margin          : 0 1em;
    }

    .footer__botton{
        border-top      : none;
        font-size       : 1.5em;
        justify-content : center;
        gap             : 2em;
        padding-bottom  : 1em;
    }
}

@media (min-width: 1440px) {
    .footer{
        padding         : 0 calc(var(--big-pading) + 9rem);
    }
}
</style>
