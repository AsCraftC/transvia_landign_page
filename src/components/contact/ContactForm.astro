---
import SectionTitle from "@/components/SectionTitle.astro";
import LoadingIcon from "@/icons/LoadingIcon.astro";
import CheckIcon from "@/icons/CheckIcon.astro";
---
<script>

</script>


<section class="contact">
    <SectionTitle title="Dudas o Consultas"/>
    <form class="contact__form">
        <label class="contact__label" for="name">
            Nombre 
            <br>
            <input class="contact__input" type="text" id="name">
        </label>
        
        <label class="contact__label" for="email">
            Correo Electronico
            <br>
            <input class="contact__input" type="email" id="email">
        </label>
        <label class="contact__label" for="message">
            Mensaje
            <br>
            <textarea  class="contact__input contact__message"  id="message"></textarea>
        </label>
        <button disabled class="contact__button">
            <span class="before">
                Enviar
            </span>
            <span class="sending ">
                <span class="button__icon">
                    <LoadingIcon />
                </span>
                Enviando...
            </span>
            <span class="after active">
                Enviado 
                <span class="button__icon">
                    <CheckIcon />
                </span>
            </span>
        </button>
    </form>
</section>

<style>
.contact{
    padding         : 0 3rem;
}
.contact__form{
    display         : flex;
    flex-flow       : column nowrap;
    gap             : .5rem;
    padding         : 1rem 0;
}
.contact__label{
    font-size       : 1.5rem;
    letter-spacing  : -.05em;
}
.contact__input{
    font-size       : 1.5rem;
    padding         : .5rem;
    width           : 50%;
    background-color: var(--background-color);
    border-radius   : 6px;
    border          : 1px solid var(--accent-color);
}
.contact__message{
    width           : 100%;
    height          : 10rem;
    resize          : none;
}
.contact__button{
    font-size       : 1.5rem;
    padding         : 1rem 3rem;
    width           : min-content;
    height          : 4rem;
    background-color: var(--background-color);
    align-self      : flex-end;
    border-radius   : 30px;
    border          : 1px solid var(--accent-color);
    cursor          : pointer;
}
.contact__button .before{
    display         : none;
}
.contact__button .sending{
    display         : none;
}
.button__icon{
    width           : 2rem;
    height          : 2rem;
}
.contact__button .after{
    display         : none;
}
.contact__button .active{
    display         : flex;
    align-items     : center;
    gap             : .5rem;
}
</style>
